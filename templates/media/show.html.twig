{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ media.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ media.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ media.description }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ media.path }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td><img src="{{ asset('upload/' ~ media.path) }}" alt="{{ media.title }}" style="width: 200px"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('media_index') }}">back to list</a>

    <a href="{{ path('media_edit', {'id': media.id}) }}">edit</a>

    {{ include('media/_delete_form.html.twig') }}
{% endblock %}
