{% extends 'base.html.twig' %}

{% block title %}Media index{% endblock %}

{% block body %}
    <h1>Media index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Path</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for media in media %}
            <tr>
                <td>{{ media.id }}</td>
                <td>{{ media.title }}</td>
                <td>{{ media.description }}</td>
                <td>{{ media.path }}</td>
                <td>
                    <a href="{{ path('media_show', {'id': media.id}) }}">show</a>
                    <a href="{{ path('media_edit', {'id': media.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('media_new') }}">Create new</a>
{% endblock %}
