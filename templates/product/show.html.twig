{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            {% for media in product.medias %}
            <tr>
                <th>Media</th>
                <td>
                    {{ media.title }}
                    <img src="{{ asset('upload/' ~ media.path) }}" alt="{{ media.title }}" style="width: 200px">
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
